/* userinfo.wxss */

.page-title {
    width: 100%;
    height: 15%;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    text-align: center;
    font-size: 50rpx;
    font-weight: 500;
}

.items-container {
    width: 100%;
    height: 85%;
    display: flex;
    flex-direction: column;
}

.item-box {
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.item-text {
    padding-left: 40rpx;
    width: 200rpx;
}

.item-picker {
    padding-right: 20rpx;
    width: 300rpx;
}

.confirmBtn {
    width: 90%;
    bottom: 0;
}
