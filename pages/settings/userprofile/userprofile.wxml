<!--userprofile.wxml-->
<view class="container">

    <view class="header">
        {{today}} 记录
    </view>

    <view class="tab">
        <block wx:for="{{tabData}}" wx:key="{{index}}">
            <view class="tab-list {{currentTabIdx===index ? 'current-highlight': ''}}" data-current="{{index}}" bindtap="onSwitchNav">{{item.name}}</view>
        </block>
    </view>
    <view class='gray-space-small'></view>

    <form class='form-container' bindsubmit="onFormSubmit" bindreset="onFormReset">
        <!-- <swiper current="{{currentTabIdx}}" class="swiper-box row" indicator-dots="{{false}}" duration="300" bindchange="onSwiperChange">
          
        </swiper> -->

        <scroll-view style='height:860rpx' scroll-y="true">
            <view class="section" wx:for="{{tabData[0].data}}" wx:key="{{index}}">
                <view class="section-item-name">
                    <text>{{item.chName}}</text>
                </view>
                <input id="{{item.type}}{{item.key}}" class="section-item-input" type='number' name="{{item.chName}}" placeholder="" value="{{item.value}}" />
                <view style='padding-left:20rpx'>{{item.measurement}}</view>
            </view>
        </scroll-view>

        <view class="foot-box">
            <button class='cancel-btn' type='default' size='default' formType="reset">重置</button>
            <button class='confirm-btn' type='primary' size='default' formType="submit">保存</button>
        </view>

    </form>

</view>