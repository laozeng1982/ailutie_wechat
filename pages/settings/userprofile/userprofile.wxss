.header {
    text-align: center;
    align-items: center;
    align-content: center;
    height: 100rpx;
    font-size: 40rpx;
    font-weight: 500;
    border-bottom: 1rpx solid #eee;
}

.section {
    display: flex;
    flex-direction: row;
    padding: 20rpx;
    height: 100rpx;
    border-bottom: 1rpx solid #eee;
}

.section_item_name {
    width: 200rpx;
    height: 50rpx;
    text-align: center;
    align-items: center;
    align-content: center;
}

.section_item_input {
    padding: 20rpx;
    height: 50rpx;
    width: 100rpx;
    align-items: center;
}

.section_item_slider {
    padding: 20rpx;
    height: 50rpx;
    width: 300rpx;
    align-items: center;
