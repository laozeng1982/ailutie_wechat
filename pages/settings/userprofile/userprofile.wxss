/* userprofile.wxss */

.header {
    text-align: center;
    align-items: center;
    align-content: center;
    height: 100rpx;
    font-size: 40rpx;
    font-weight: 500;
    border-bottom: 1rpx solid #eee;
}

.form-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    /* align-items: center; */
    justify-content: space-between;
}

.section {
    display: flex;
    flex-direction: row;
    height: 100rpx;
    align-content: center;
    align-items: center;
    padding-left: 60rpx;
    font-size: 36rpx;
    border-bottom: 1rpx solid #eee;
}

.section-item-name {
    width: 300rpx;
    height: 50rpx;
    align-items: center;
    align-content: center;
}

.section-item-input {
    padding: 10rpx;
    height: 50rpx;
    width: 150rpx;
    align-items: center;
    align-content: center;
    text-align: center;
    border: 1rpx solid #eee;
}

