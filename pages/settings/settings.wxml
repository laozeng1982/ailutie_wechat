<!--settings.wxml-->
<scroll-view class='setting-page-scroll' scroll-y="true">

    <view class='upper-box'>
        <image class='userInfo-avatar-image' src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <view class="userInfo-name">
            <text class="title">{{userInfo.nickName}}</text>
        </view>
    </view>


    <view class='settings-container'>
        <view class="setting-brief-title">本月已锻炼</view>
        <view class='setting-brief-box'>
            <view class='exercise-brief-box'>
                <view> 500 次</view>
                <view>健身</view>
            </view>
            <view class='exercise-brief-box'>
                <view> 500 个</view>
                <view>动作</view>
            </view>
            <view class='exercise-brief-box'>
                <view> 500 </view>
                <view>大卡（kCal）</view>
            </view>
        </view>

        <!-- 具体的每个条目 -->
        <view wx:for="{{list}}" wx:for-item="item" wx:key="{{index}}">
            <view class="gray-space-small"></view>
            <view class="setting-items-container" wx:for="{{item.list_tool}}" wx:key="{{index}}" wx:for-item="i" data-log="{{i.name}}" data-url="{{i.url}}" bindtap="goPage">
                <view class="setting-item-box">
                    <image class='setting-item-image' src="{{i.img}}" />
                    <view class='setting-item-text'>
                        <text class="title">{{i.name}}</text>
                    </view>
                </view>

                <view style='padding-right:40rpx'>
                    <image class='setting-item-image' src="../../pages/image/arrows_square_right_64px.png"></image>
                </view>

            </view>
        </view>
    </view>


</scroll-view>