/* calender.wxss */

.calender_panel {
  width: 100%;
  height: 600rpx;
}

.calender_box {
  width: 100%;
  background: #fff;
  overflow: hidden;
  border-bottom: 1rpx solid #ececec;
  display: flex;
}

.calender_box_header {
  width: 100%;
  background: #b2b2b2;
  overflow: hidden;
  border-bottom: 1rpx solid #ececec;
  display: flex;
}

.weekday_label_header {
  width: 14.28%;
  float: left;
  text-align: center;
  font-size: 40rpx;
  padding: 10rpx 0;
}

.weekday_label_days {
  width: 14.28%;
  position: relative;
  float: left;
  text-align: center;
  font-size: 40rpx;
  padding: 10rpx 0;
}

.weekday_label_days_overlay {
  position: absolute;
  display: flex;
  width: 20rpx;
  height: 20rpx;
  left: 0;
  top: 0;
  z-index: 100;
  background: #1d976c;
}

.active_date {
  background: #e64340;
  color: #fff;
  border-radius: 50%;
}

.active_date_overlay {
  position: absolute;
  align-items: center;
  width: 50rpx;
  height: 50rpx;
  left: 30rpx;
  top: 60prx;
  z-index: 100;
  background: #e64340;
  color: #fff;
  border-radius: 50%;
}

.show_box {
  display: flex;
  justify-content: center;
  padding: 20rpx;
  font-size: 35rpx;
  align-items: center;
}

.redcolor {
  font-weight: 900;
  color: red;
}

.button-group {
  display: flex;
  width: 100%;
  justify-content: space-between;
  height: 3rem;
  align-items: center;
}

.tip_container {
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: flex-start;
  font-size: 30 rpx;
}

.tip {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 30 rpx;
}

.date-marker {
  height: 30rpx;
  width: 30rpx;
  background: #1d976c;
}
