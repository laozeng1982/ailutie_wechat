/**index.wxss**/

/* 上半部分，图像显示 */

.show-box {
    display: flex;
    justify-content: space-around;
    flex-direction: column;
    align-content: center;
    align-items: center;
    background: #fff;
    width: 100%;
    height: 65%;
}

.chart-title {
    width: 100%;
    height: 40rpx;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
}

.type-radio-box {
    display: flex;
    flex-direction: row;
    width: 400rpx;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.type-radio-item-box {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.type-radio-text-unchecked {
    font-size: 24rpx;
    color: #888;
}

.type-radio-text-checked {
    font-size: 24rpx;
}

.type-radio {
    padding-left: 10rpx;
    margin-right: 0;
}

/* 下半部分，计划控制 */

.plan-box {
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
    width: 100%;
    height: 35%;
    background: #888;
    justify-content: space-between;
}

.plan-white-bg {
    display: flex;
    height: 160rpx;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    background: #fff;
}

.tips-text {
    font-size: 30rpx;
    align-content: center;
    align-items: center;
    text-align: center;
    height: 60rpx;
    color: #fff;
}

.plan-name-text {
    padding: 40rpx;
    height: 80rpx;
    display: flex;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.next-image {
    width: 80rpx;
    height: 80rpx;
    padding: 40rpx;
}

.round-corner-btn {
    border: 2px solid;
    border-radius: 75rpx;
    width: 400rpx;
    height: 100rpx;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    color: #fff;
}
