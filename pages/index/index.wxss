/**index.wxss**/

.userinfo {
    display: flex;
    height: 120rpx;
    width: 100%;
    flex-direction: row;
    /* justify-content: space-around; */
    align-content: center;
    align-items: center;
}

.userinfo-avatar {
    width: 80rpx;
    height: 80rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.chartTitle {
    width: 100%;
    height: 40rpx;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
}

.showArea {
    display: flex;
    justify-content: space-around;
    flex-direction: column;
    align-content: center;
    align-items: center;
    background: #fff;
    width: 100%;
    height: 65%;
}

.planArea {
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
    width: 100%;
    height: 35%;
    background: #888;
}

.grayBackgroud {
    display: flex;
    height: 100%;
    width: 100%;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    background: #888;
    border-bottom: 1rpx solid #eee;
}

.whiteBackgroud {
    display: flex;
    height: 160rpx;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    background: #fff;
}

.smalltext {
    margin-top: 40rpx;
    font-size: 16rprx;
    color: #fff;
}

.text {
    padding: 40rpx;
    /* width: 100%; */
    height: 80rpx;
    display: flex;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.radioContainer {
    display: flex;
    flex-direction: row;
    width: 400rpx;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.radioItem {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.radio {
    padding-left: 10rpx;
    margin-right: 0;
}

.textUnSelected {
    font-size: 24rpx;
    color: #888;
}

.textSelected {
    font-size: 24rpx;
}

.imageBig {
    width: 80rpx;
    height: 80rpx;
    padding: 40rpx;
}

.roundCornor {
    margin-top: 120rpx;
    border: 2px solid;
    border-radius: 75rpx;
    width: 400rpx;
    height: 100rpx;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    color: #fff;
}

