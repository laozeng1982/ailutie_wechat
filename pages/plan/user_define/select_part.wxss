/* pages/plan/user_define/select_part.wxss */
@import '../plan_wizzard_style';

.scrollview {
    height: 840rpx;
    display: flex;
    flex-direction: column;
}

.rowContainer {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.text1 {
    margin-left: 40rpx;
    width: 360 rpx;
}

.picker_row {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
    justify-content: space-between;
    width: 300rpx;
    height: 100rpx;
}

.arrow {
    height: 26rpx;
    width: 42rpx;
}

.partContainer {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.part {
    width: 80%;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.selector {
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
}


.date {
    width: 100rpx;
    height: 100rpx;
    display: flex;
    align-content: center;
    align-items: center;
    flex-direction: column;
    justify-content: space-around;
}

.selected_date {
    width: 60rpx;
    height: 60rpx;
    background: #888;
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-content: center;
    align-items: center;
    flex-direction: row;
    justify-content: space-around;
}

.unselected_date {
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-content: center;
    align-items: center;
    flex-direction: row;
    justify-content: space-around;
}

.datePickerContainer {
    height: 80rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
    flex-direction: row;
    align-content: center;
    align-items: center;
    font-size: 30rpx;
}

.image {
    width: 64rpx;
    height: 64rpx;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}

.nextBtn {
    width: 90%;
}
