<!--pages/plan/plan_goal/plan_goal.wxml-->

<view class='thisContainer'>
    <view class='graySpaceSmall'></view>
    <view class='topArea'>
        <view>
            我的基础
        </view>

        <view class='selectorContainer' wx:for="{{level}}" wx:key="{{index}}">
            <radio-group>
                <view id="{{item.id}}" class="roundCornor {{item.selected?'border_black':''}}" bindtap='onUserTypeSelected'>
                    <view class='textLabel'>
                        <text>{{item.text}}</text>
                    </view>
                    <radio class='icon' size="23" checked='{{item.selected}}'>

                    </radio>
                </view>
            </radio-group>
        </view>

        <view class='graySpaceSmall'></view>

        <view>
            健身目标
        </view>

        <view class='selectorContainer' wx:for="{{target}}" wx:key="{{index}}">
            <radio-group>
                <view id="{{item.id}}" class="roundCornor {{item.selected?'border_black':''}}" bindtap='onGoalTypeSelected'>
                    <view class='textLabel'>
                        <text>{{item.text}}</text>
                    </view>
                    <radio class='icon' size="36" checked='{{item.selected}}'> </radio>
                </view>
            </radio-group>
        </view>
    </view>
    <!-- 这是Toast -->
    <include src="../../ui/toast/warn_toast.wxml" />

    <view class='graySpaceSmall'></view>

    <view class='footArea'>
        <button class='nextBtn' type='primary' bindtap='onNext'> 下一步 </button>
    </view>
</view>