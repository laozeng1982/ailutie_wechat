<!--plan.wxml-->

<view class="thiscontainer">
    <!-- <view class="slimSpace"></view>  -->
    <!-- 这是Toast -->
    <include src="../ui/toast/toast.wxml" />
    <!-- <view class="title">{{selectedDate}}</view> -->
    <view class="button-group">
        <button class="dateMoveButton" bindtap="onLastDate" size="default"> 前一天</button>
        <button class="dateButton" bindtap="onSelectDate" size="default"> {{selectedDate}}</button>
        <button class="dateMoveButton" bindtap="onNextDate" size="default"> 后一天</button>
    </view>

    <view class="graySpace"></view>

    <view class="topLabel">
        <view class="topLabelLeft">
            部位
        </view>
        <view class="topLabelRight">
            <text>动作</text>
        </view>
    </view>


    <view class="tow-panel-container">
        <!-- 左边 -->
        <view class="left-panel">
            <scroll-view class="scrollview" scroll-y="true">
                <radio-group id='{{item.partId}}' bindchange="onBodyPartSelected">
                    <view class="listSingleMovement" wx:for="{{bodyPartList.partList}}" class='bodypart-item'>
                        <!-- <view class="graySpace"></view> -->

                        <view id='{{item.partId}}' class='bodypart'>
                            <!-- <image class='header-img' src="../../image/arm2.png"></image> -->
                            <view class="bodypartRectangle {{item.selected?'bodypartSelected':''}} {{item.partId==selectedPartId?'bodypartHighlight':''}}" data-index="{{index}}">
                                <!-- <view class="graySpace"></view> -->
                                <!-- {{item.partId%2==0?'bodypartCornor1':'bodypartCornor2'}} -->
                                <view id='{{item.partId}}' class="bodypartName" bindtap="onBodyPartTap">
                                    <radio id='{{item.partId}}' value="{{item.partId}}" checked="{{item.partId==selectedPartId}}" />
                                    <view class="bodypartInnerName">{{item.partName}}</view>
                                </view>
                                <!-- {{item.partId==(curMovementIndex+1)?true:false}} -->
                            </view>

                        </view>
                    </view>
                </radio-group>

            </scroll-view>
        </view>

        <!-- 右边 -->
        <view class="right-panel">
            <scroll-view class="scrollview" scroll-y="true">

                <view class="listSingleMovement" wx:for="{{bodyPartList.partList[selectedPartId-1].actionList}}" class='movement-item'>
                    <!-- <view class="graySpace"></view> -->

                    <view id='{{item.actionId}}' class='movement'>
                        <view class="graySpace"></view>
                        <!-- <image class='header-img' src="../../image/arm2.png"></image> -->
                        <view class="movementRectangle {{item.actionSelected?'movementSelected':''}} {{item.actionId===selectedMovementId&&item.actionSelected?'movementHighlight':''}}" data-index="{{index}}">
                            <!-- <view class="graySpace"></view> -->
                            <!-- {{item.actionId%2==0?'movementCornor1':'movementCornor2'}} -->

                            <view id='{{item.actionId}}' class="movementName" bindtap="onMovementTap">
                                <view class="movementInnerItem">{{item.actionId}}</view>
                                <view class="movementInnerGroup">
                                    <view class="movementInnerName"> {{item.actionName}} </view>

                                    <picker id="{{item.actionId}}" mode="multiSelector" bindchange="onNumberChange" value="{{multiMovementNoIndex}}" range="{{movementNoMultiArray}}">
                                        <view class="movementName">
                                            <view class="tableItem">{{allMovementsHolder[selectedPartId-1][item.actionId-1].contents.planGpCount}}组 </view>
                                            <view class="tableItem">{{allMovementsHolder[selectedPartId-1][item.actionId-1].contents.details[0].planCount}}次 </view>
                                            <view class="tableItem">{{allMovementsHolder[selectedPartId-1][item.actionId-1].contents.details[0].planWeight}}</view>
                                            <view class="tableItem">{{allMovementsHolder[selectedPartId-1][item.actionId-1].contents.details[0].measurement}}</view>
                                        </view>
                                    </picker>
                                </view>
                            </view>
                        </view>

                        <view class="graySpace"></view>
                    </view>
                </view>
            </scroll-view>
        </view>
    </view>


</view>