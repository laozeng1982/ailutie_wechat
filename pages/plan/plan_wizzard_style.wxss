/* 外面的大框 */

.thisContainer {
    /* height: 100%; */
    display: flex;
    height: 100%;
    width: 100%;
    flex-direction: column;
    justify-content: space-between;
    align-content: center;
    align-items: center;
    font-family: "微软雅黑";
    background: #fff;
}

/* 上面部分 */

.topArea {
    /* height: 90%; */
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    background: #fff;
}

/* 下面部分 */

.footArea {
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

/* 底部按钮 */

.nextBtn {
    width: 90%;
}

/* 选中的小图标 */

.icon {
    padding: 40rpx;
    border-right: 1rpx soild #eee;
    size: 20;
}

.selectorContainer {
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}


.radio_group {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    align-content: center;
    align-items: center;
}

.radio {
    padding: 40rpx;
    align-content: center;
    align-items: center;
}

.header {
    width: 100%;
    height: 80rpx;
    font-weight: 500;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.scrollviewVertical {
    height: 940rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
}
