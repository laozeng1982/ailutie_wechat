/* 外面的大框 */

.thisContainer {
    display: flex;
    height: 100%;
    width: 100%;
    flex-direction: column;
    justify-content: space-between;
    align-content: center;
    align-items: center;
    font-family: "微软雅黑";
    background: #fff;
}

/* 上面部分 */

.topArea {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    background: #fff;
}

/* 下面部分 */

.footArea {
    width: 100%;
    height: 120rpx;
    justify-content: space-around;
    flex-direction: row;
    align-content: center;
    align-items: center;
    display: flex;
}

/* 底部按钮 */

.nextBtn {
    width: 90%;
}

/* 选中的小图标 */

.icon {
    padding: 40rpx;
    size: 36;
}

.selectorContainer {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.radio_group {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    align-content: center;
    align-items: center;
}

.radio {
    padding: 40rpx;
    align-content: center;
    align-items: center;
}

.header {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.scrollviewVertical {
    height: 940rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
}

.textBig {
    padding-left: 40rpx;
    padding-top: 20rpx;
    font-size: 40 rpx;
    font-weight: 600;
    align-content: center;
    align-items: center;
}

.textSmall {
    width: 100%;
    height: 22rpx;
    font-size: 20rpx;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    display: flex;
}

.text {
    padding-left: 40rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-right: 40rpx;
    align-content: center;
    align-items: center;
}

.textBold {
    padding-left: 40rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-right: 40rpx;
    font-weight: 500;
    align-content: center;
    align-items: center;
}

.actionContainer {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.actionItem {
    width: 60%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-content: flex-start;
    align-items: center;
}

.pickerContainer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    /* border-bottom: 1rpx solid #eee; */
}

.pickerItem {
    width: 70rpx;
    font-size: 30rpx;
}

.imageBig {
    width: 160rpx;
    height: 160rpx;
    border: 1rpx solid #eee;
    border-radius: 2%;
}

.header {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.roundCornor {
    border: 1px solid;
    border-radius: 75rpx;
    border-color: #888;
    width: 500rpx;
    height: 100rpx;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    flex-direction: row;
}

.item_selected {
    border-color: #888;
    background-color: #888;
    color: #fff;
}

.swiper-tab {
    width: 100%;
    border-bottom: 1rpx solid #888;
    text-align: center;
    line-height: 80rpx;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 33.33%;
    color: #888;
}

.on {
    color: #000;
    border-bottom: 10rpx solid #888;
}

.current_highlight {
    color: #09BB07;
    font-weight: 600;
}

.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.swiper-box view {
    text-align: center;
}
