/** wxss **/

.container1 {
  display: flex inline-flex;
  border-bottom: 1rpx solid #eee;
}

.container2 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}

.container_iner {
  width: 100%;
  flex-direction: row;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
}

.fontset {
  color: #353535;
  font-size: 40rpx;
  font-weight: 900;
}

.slider {
  padding-left: 10 rpx;
  padding-right: 10rpx;
  flex-grow: 4;
}

.pickergroup {
  display: flex;
  width: 100%;
  justify-content: space-between;
  height: 2rem;
  align-items: center;
}

.button-group {
  display: flex;
  width: 100%;
  /* height: 40rpx; */
  justify-content: center;
  height: 2rem;
  align-items: center;
}

.graySpace {
  padding-left: 40rpx;
  background: #fff;
  font-size: 12px;
  min-height: 30rpx;
}

.space {
  padding-left: 40rpx;
  background: #eee;
  height: 1rpx;
}

/** 修改button默认的点击态样式类**/

.button-hover {
  background-color: red;
}

/** 添加自定义button点击态样式类**/

.other-button-hover {
  background-color: blue;
}

