.thiscontainer {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.title {
  display: flex;
  height: 80rpx;
  flex-direction: row;
  align-items: center;
  font-size: 40rpx;
  font-weight: 500;
  justify-content: space-around;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  background: #888;
  color: #fff;
  /* background-color: #fff; */
}
.topLabel {
    display: flex;
    align-items: center;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    /* border-bottom: 1rpx solid #eee; */
}

.topLabelLeft {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 25%;
    /* border-bottom: 1rpx solid #eee; */
}

.topLabelRight {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 75%;
    /* border-bottom: 1rpx solid #eee; */
}