<!-- 今日计划表 -->
<view class="thiscontainer">
    <!-- 这是Toast -->
    <include src="../ui/toast/toast.wxml" />

    <!-- 屏幕分两部分 -->
    <!-- 上半部分计划总览 -->
    <view class="topPanel">
        <view class="topPanelLeft">
            <view class="topPanelLeft_InnerLeft">
                <text style="font-size: 40rpx">今天</text>
                <text style="font-size: 26rpx">{{showDate}}</text>
            </view>
        </view>

        <view class="topPanelRight">
            <view wx:if="{{todayHasPlan}}" class="topPanelLeft_InnerLeft" bindtap="onShowDetails">
                <text style="font-size: 30rpx">{{todayPlan[currentPartId].name}}</text>
                <text style="font-size: 50rpx">{{todayPlan[currentPartId].data[currentActionId].action.name}}</text>
            </view>

            <view wx:else class="topPanelLeft_InnerLeft">
                <text style="font-size: 50rpx">{{actionTips}}</text>
            </view>
        </view>
    </view>

    <view class='graySpace'></view>
    <!-- 中间部分具体锻炼记录 -->
    <view class="middlePanel" wx:if="{{!showDetails}}">

        <view class="middlePanel_InnerContainer" wx:if="{{hasActivePlan}}">
            <!-- 动作显示和浏览 -->
            <view class='middlePanelRowContainer'>
                <image class='image-arrows' src='../image/arrows_square_left_64px.png' bindtap='onLastAction'></image>
                <image class='image-action' src="../{{todayPlan[currentPartId].data[currentActionId].action.imageUrl}}"></image>
                <image class='image-arrows' src='../image/arrows_square_right_64px.png' bindtap='onNextAction'></image>
            </view>

            <!-- 动作数据记录 -->
            <view class='middlePanelRowContainer'>
                <view class="scrollItemContainer">
                    <view class="scrollItem">实际：</view>
                    <picker class="scrollItemContainer" mode="multiSelector" bindchange="onGroupScore" value="{{groupScoreIndex}}" range="{{groupScoreMultiArray}}">
                        <view class="scrollItem">{{item.actualCount}}</view>
                    </picker>
                    <view class="scrollItemNarrow">次</view>
                    <view class="scrollItem">{{item.actualWeight}}</view>
                    <view class="scrollItemNarrow">{{item.measurement}}</view>
                </view>
            </view>

            <!-- 时间倒数器 -->
            <view class='middlePanelRowContainer'>
                <image class='image-arrows' src="{{playSwitch?'../image/play_64px.png':'../image/pause_64px.png'}} " bindtap='onControl'></image>
            </view>

            <!-- 时间倒数器 -->
            <view class='middlePanelRowContainer'>
                <view class="middlePanelRight_row3_right_row3" >
                    <text>整套动作感觉</text>
                    <view class="imageContainer">
                        <view style="height:120rpx" wx:for="{{totalScoreStarArray}}" wx:key="{{index}}">
                            <image value="{{item.id}}" id="{{item.id}}" class="image_star" bindtap="onActionScore" src="{{item.src}}"></image>
                        </view>
                    </view>
                </view>
            </view>

        </view>


        <view wx:else class="middlePanel_InnerContainer">
            <view style='margin-top:280rpx;color:#888'>您还没有计划，创建一个吧</view>
            <view class='roundCornor' bindtap='onMakePlan'>去定制计划</view>
        </view>

    </view>

    <!-- 点击动作详情的时候响应 -->
    <view class="middlePanelHide" wx:else>
        <view class="title">动作详情</view>
        <view class="tmp">
            <text style="font-size: 60rpx">还在抓紧整理中。。。。</text>

        </view>
    </view>

</view>