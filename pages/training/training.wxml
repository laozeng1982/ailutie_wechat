<!-- 今日计划表 -->
<view class="thiscontainer">
  <!-- 这是Toast -->
  <include src="../ui/toast.wxml" />
  <view class="container2">
    <scroll-view style='height:{{scrollHeight}}rpx;' scroll-y="true">
      <view class="listSingleMovement" wx:for="{{todayTrainPlan}}" class='movement-item' animation='{{item.wrapAnimation}}'>
        <view class="graySpace"></view>
        <view id='{{item.id}}' class='movement' bindtap="onModifyMovement" >
          <image class='header-img' src="../../image/arm2.png"></image>
          <view class="tableCornor" data-index="{{index}}">
            <view class="graySpace"></view>

            <view class="movementName">
              <view class="tableItem2">{{item.partName}}</view>
              <view class="tableItem3">{{item.movementName}}</view>
            </view>

            <view class="graySpace"></view>

            <view class="movementNumbers">
              <view class="tableItem">{{item.groupCount}}组</view>
              <view class="tableItem">{{item.movementCount}}次</view>
              <view class="tableItem_kg">{{item.movementWeight}}{{item.measurement}}</view>
            </view>

            <view class="graySpace"></view>
          </view>
        </view>
        <view class='movement-menu'>
          <view id='{{item.id}}' class='menu-delete' bindtap='onDeleteMovementTap' bindlongtap='onDeleteMovementTap'>
            删除
          </view>
          <view id='{{item.id}}' class='menu-mark' bindtap='onModifyMovement' bindlongtap='onModifyMovementLongtap'>
            修改
          </view>
        </view>
        <view class="graySpace"></view>
      </view>
    </scroll-view>
  </view>
</view>