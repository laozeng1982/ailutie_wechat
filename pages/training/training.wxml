<!-- 今日计划表 -->
<view class="thiscontainer">
    <!-- 这是Toast -->
    <include src="../ui/toast/toast.wxml" />
    <view class="title">今日计划</view>

    <view class="graySpace"></view>

    <view class="container2">
        <scroll-view class="scrollContainer1" style='height:{{planScrollHeight}}rpx; ' scroll-y="true">

            <checkbox-group bindchange="onGroupFinished">
                <view class="listSingleMovement" wx:for="{{todayTrainPlan.movementList}}" class='movement-item' animation='{{item.wrapAnimation}}'>
                    <!-- <view class="graySpace"></view> -->

                    <view id='{{item.id}}' class='movement'>
                        <view class="graySpace"></view>
                        <!-- <image class='header-img' src="../../image/arm2.png"></image> -->
                        <view class="{{item.id%2==0?'tableCornor1':'tableCornor2'}}" data-index="{{index}}">
                            <!-- <view class="graySpace"></view> -->

                            <radio-group class="box" bindchange="onGroupSelected">
                                <radio value="{{item.id}}" checked="{{item.id==(curMovementIndex+1)?true:false}}" />
                            </radio-group>

                            <view id='{{item.id}}' class="movementName" bindtap="onGroupModify">
                                <view class="tableItemName">{{item.movementName}}</view>
                                <view class="tableItem">第 {{item.curFinishedMvCount}}/{{item.planGpCount}} 组</view>
                            </view>

                            <checkbox class="box" value="{{item.id}}" checked="{{item.finished}}" />
                        </view>

                        <view class="graySpace"></view>
                    </view>

                </view>
            </checkbox-group>

        </scroll-view>
    </view>

    <view class="title">实际完成</view>
    <view class="container2">
        <scroll-view class="scrollContainer1" style='height:{{trainScrollHeight}}rpx; ' scroll-y="true">
            <checkbox-group bindchange="onMovementFinished">
                <view class="listSingleMovement" wx:for="{{todayTrainPlan.movementList[curMovementIndex].movementAmount}}" class='movement-item' animation='{{item.wrapAnimation}}'>

                    <view id='{{item.id}}' class='movement' bindtap="">
                        <view class="graySpace"></view>
                        <!-- <image class='header-img' src="../../image/arm2.png"></image> -->
                        <view class="{{item.id%2==0?'tableCornor1':'tableCornor2'}}" data-index="{{index}}">
                            <!-- <view class="graySpace"></view> -->

                            <view id='{{item.id}}' class="movementName" bindtap="onMovementModify">
                                <view class="tableItem">第 {{item.id}} 组</view>
                                <view class="tableItem">{{item.actualCount}}/{{item.planCount}} 次</view>
                                <view class="tableItem">{{item.actualWeight}}/{{item.planWeight}} {{todayTrainPlan.movementList[curMovementIndex].measurement}}</view>
                            </view>
                            <checkbox class="box" value="{{item.id}}" checked="{{item.finished}}" />
                        </view>
                        <view class="graySpace"></view>

                    </view>
                    <view class='movement-menu'>
                        <view id='{{item.id}}' class='menu-delete' bindtap='' bindlongtap=''>
                            删除
                        </view>
                        <view id='{{item.id}}' class='menu-mark' bindtap='' bindlongtap=''>
                            修改
                        </view>
                    </view>
                </view>
            </checkbox-group>
        </scroll-view>
    </view>

    <!-- 这是Modal -->
    <include src="../ui/modal/MovementModal.wxml" />
</view>