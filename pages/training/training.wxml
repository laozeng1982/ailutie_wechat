<!-- 今日计划表 -->
<view class="thiscontainer">
    <!-- 这是Toast -->
    <include src="../ui/toast/toast.wxml" />

    <!-- 屏幕分两部分 -->
    <!-- 上半部分计划总览 -->
    <view class="topPanel">
        <view class="topPanelLeft">
            <view class="topPanelLeft_InnerLeft">
                <text style="font-size: 50rpx">今天</text>
                <text style="font-size: 30rpx">{{showDate}}</text>
            </view>
        </view>

        <view class="topPanelRight">
            <view wx:if="{{todayHasPlan}}" class="topPanelLeft_InnerLeft" bindtap="onShowDetails">
                <text style="font-size: 40rpx">{{todayPlan[curSelectedPartId].name}}</text>
                <text style="font-size: 60rpx">{{todayPlan[curSelectedPartId].actionSet[curSelectedActionId].name}}</text>
            </view>

            <view wx:else class="topPanelLeft_InnerLeft">
                <text style="font-size: 50rpx">{{actionTips}}</text>
            </view>

        </view>
    </view>

    <view class='graySpace'></view>
    <!-- 中间部分具体锻炼记录 -->
    <view class="middlePanel" wx:if="{{!showDetails}}">

        <view class="middlePanelLeft_InnerLeft" wx:if="{{hasActivePlan}}">
            <scroll-view class="middleRecorderScrollview" scroll-y="true">
                <view class='bodypart-item' wx:for="{{curRecords.movementList[curSelectedMovementId-1].contents.details}}" wx:key="{{item.id}}">
                    <icon type="success" style="padding:20rpx;border-right:1rpx soild #eee" size="20" color="{{item.finished?'green':'gray'}}" />
                    <view class="plan-actual">
                        <view id='{{item.id}}' class="detailsItem">
                            <view class="scrollItemContainer">
                                <view class="scrollItem">计划：</view>
                                <view class="scrollItem">{{item.planCount}}</view>
                                <view class="scrollItemNarrow">次</view>
                                <view class="scrollItem">{{item.planWeight}}</view>
                                <view class="scrollItemNarrow">{{item.measurement}}</view>
                            </view>
                        </view>

                        <view id='{{item.id}}' class="detailsItem" bindtap="onSelectFinishedDetails">
                            <view class="scrollItemContainer">
                                <view class="scrollItem">实际：</view>
                                <picker class="scrollItemContainer" mode="multiSelector" bindchange="onGroupScore" value="{{groupScoreIndex}}" range="{{groupScoreMultiArray}}">
                                    <view class="scrollItem">{{item.actualCount}}</view>
                                </picker>
                                <view class="scrollItemNarrow">次</view>
                                <view class="scrollItem">{{item.actualWeight}}</view>
                                <view class="scrollItemNarrow">{{item.measurement}}</view>
                            </view>
                        </view>
                    </view>

                </view>

            </scroll-view>
            <button class='addBtn' type='primary' bindtap='onAdd'>ADD</button>
        </view>

        <view wx:else class="middlePanelLeft_InnerLeft">
            <image class='imageBig' src='../image/plus_128px.png' bindtap='onMakePlan'></image>
            <view style='margin-top:80rpx;color:#888'>您还没有计划，创建一个吧</view>
            <!-- <view class='roundCornor' bindtap='onMakePlan'>去定制计划</view> -->
        </view>


    </view>

    <!-- 点击动作详情的时候响应 -->
    <view class="middlePanelHide" wx:if="{{showDetails}}">
        <view class="title">动作详情</view>
        <view class="tmp">
            <text style="font-size: 60rpx">还在抓紧整理中。。。。</text>

        </view>
    </view>

</view>