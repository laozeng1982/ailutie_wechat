<!-- 今日计划表 -->
<view class="thiscontainer">
    <!-- 这是Toast -->
    <include src="../ui/toast/toast.wxml" />

    <!-- 屏幕分两部分 -->
    <!-- 上半部分计划总览 -->
    <view class="topPanel">
        <view class="topPanelLeft">
            <view class="topPanelLeft_InnerLeft">
                <text style="font-size: 40rpx">今天</text>
                <text style="font-size: 26rpx">{{showDate}}</text>
            </view>
        </view>

        <view class="topPanelRight">
            <view wx:if="{{todayHasPlan}}" class="topPanelLeft_InnerLeft" bindtap="onShowDetails">
                <text style="font-size: 30rpx">{{todayPlan[curSelectedPartId].name}}</text>
                <text style="font-size: 50rpx">{{todayPlan[curSelectedPartId].actionSets[curSelectedActionId].name}}</text>
            </view>

            <view wx:else class="topPanelLeft_InnerLeft">
                <text style="font-size: 50rpx">{{actionTips}}</text>
            </view>

        </view>
    </view>

    <view class='graySpace'></view>
    <!-- 中间部分具体锻炼记录 -->
    <view class="middlePanel" wx:if="{{!showDetails}}">

